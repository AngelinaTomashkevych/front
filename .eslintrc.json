{
  "parserOptions": {
    "ecmaVersion": 2021,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "extends": ["plugin:react/recommended", "plugin:react-hooks/recommended"],
  "settings": {
    "react": {
      "version": "detect"
    }
  },

  "plugins": ["react", "react-hooks"],

  "rules": {
    "react/jsx-no-bind": [
      "error",
      {
        "allowArrowFunctions": true,
        "allowBind": false,
        "ignoreRefs": true
      }
    ],
    "react/react-in-jsx-scope": "off",
    "no-unused-vars": "warn",
    "no-console": "warn",
    "no-undef": "error",
    "react/prop-types": "error",
    "react/require-default-props": "error",
    "react-hooks/exhaustive-deps": "off"
  },
  "globals": {
    "document": "readonly",
    "console": "readonly",
    "process": "readonly"
  }
}
